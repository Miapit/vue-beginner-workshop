$black = #2b2b2b
$darkest = lighten($black, 10%)
$darker = lighten($black, 20%)
$dark = lighten($black, 30%)
$lightGray = #eee
@import "mixins.styl"
@import "got-font.styl"

body, html
  padding: 0
  margin: 0
  font-family "Game of Thrones"
  color: $black
  font-size: 12px
  +desktop()
    font-size: 16px

body
  min-width: 500px
  background: $lightGray;

a
  color: $black
  text-decoration none
  def-transit()
  &:hover
    color $dark
    text-decoration: underline

.map
  position: relative
  height: 0
  padding-bottom: 236.41%
  background: url("../images/map.jpg") top left / contain no-repeat

@import "home.styl"
@import "grid.styl"
@import "house.styl"
@import "member-page.styl"
@import "transitions.styl"
